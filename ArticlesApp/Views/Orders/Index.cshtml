

<div class="container my-4">
    <h2 class="text-center">Comenzile tale</h2>
    <hr />

        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID Comandă</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in ViewBag.Orders)
                {
                    <tr>
                        <td>@order.Id</td>
                        <td>
                            <a asp-controller="Orders" asp-action="Show" asp-route-id="@order.Id" class="btn btn-sm btn-primary">
                                <i class="bi bi-eye"></i> Detalii
                            </a>
                            @if (User.IsInRole("Editor") || User.IsInRole("Admin"))
                            {
                            <form method="post" asp-controller="Orders" asp-action="Delete" asp-route-id="@order.Id" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-sm">Șterge</button>
                            </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    
</div>
