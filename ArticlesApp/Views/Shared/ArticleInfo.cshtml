@model ArticlesApp.Models.Article

<div class="container my-5">
    <div class="row g-5">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <img src="@(Url.Content("https://localhost:7223/" + Model.ImagePath))"
                     alt="@Model.Title"
                     class="img-fluid rounded-3"
                     style="max-height: 450px; width: 100%;" />
            </div>
        </div>
        <div class="col-md-6 d-flex flex-column justify-content-between">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="fw-bold text-dark mb-0">@Model.Title</h2>
                <p class="text-warning fs-5 mb-0">
                    <i class="bi bi-star-fill"></i> @Model.Rating / 5
                </p>
            </div>
            <h5 class="text-dark">@Model.Category.CategoryName</h5>

            <p class="text-muted fs-5 mb-4">@Model.Content</p>

            <div class="mb-4">
                <p class="fw-bold text-danger fs-3 mb-2">Preț: @Model.Pret RON</p>
            </div>

            <form method="post" asp-controller="Articles" asp-action="AddToCart" asp-route-id="@Model.Id">
                <div class="mb-4">
                    <label for="quantity-@Model.Id" class="form-label">Cantitate:</label>
                    <select id="quantity-@Model.Id" name="quantity" class="form-select form-select-lg" style="width: auto;">
                        @for (int i = 1; i <= 10; i++)
                        {
                            <option value="@i">@i</option>
                        }
                    </select>
                </div>

                <button class="btn btn-primary btn-lg w-100 d-flex align-items-center justify-content-center" type="submit">
                    <i class="bi bi-cart-plus fs-4 me-2"></i> Adaugă în coș
                </button>
            </form>
        </div>
    </div>
</div>
